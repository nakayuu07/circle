<body id = "introduce">
  <div class = "sing">
    <div class="container">
      <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">

        <h1 class = "main-title">circle</h1>

        <%= alert %>

        <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <p class = "devise-mail"><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %></p>
          </div>

          <div class="field">
            <p><%= f.text_field :name, class: "form-control", placeholder: "名前" %></p>
          </div>

          <div class="field">
            <p><%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %></p>
          </div>

          <div class="field">
            <p><%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %></p>
          </div>

          <div class="actions">
            <%= f.submit "サインアップ", class: "btn btn-success btn-block" %>
          </div>
        <% end %>
        <div class = "white">
          <h5 class = "have_account">アカウントお持ちの方こちらからもログインできます<h5>
          <h4 class = "twitter"><%= link_to "twitterログイン", user_twitter_omniauth_authorize_path,class: "btn btn-info btn-block" %></h4>
          <h4 class = "facebook"><%= link_to "facebookログイン",  user_facebook_omniauth_authorize_path,class:"btn btn-primary btn-block"%></h4>
          <h4 class = "registration">登録済みの方はこちらから<strong><%= link_to "ログイン", new_user_session_path %></strong>する</h4>
        </div>
      </div>
    </div>
  </div>
</body>
