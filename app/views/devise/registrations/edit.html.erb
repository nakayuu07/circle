<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10 col-ex-6">
    <h3>アカウント情報を変更する</h3>

    <%= alert %>

    <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
      <%= devise_error_messages! %>


      <div class="field">
        <p class = "change-mail"><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %></p>
      </div>

      <div class="field">
       <p><%= f.text_field :name, class: "form-control", placeholder: "名前" %></p>
      </div>

      <div class="field">
        <p><%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %></p>
      </div>

      <div class="field">
        <p><%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "パスワード（確認）" %></p>
      </div>

      <div class="field">
         <%= f.label :現在のパスワード %><br />
         <p><%= f.password_field :current_password, autocomplete: "off", class: "form-control" %><p/>
      </div>

      <div class="actions">
        <p><%= f.submit "変更する", class: "btn btn-primary btn-block" %></p>
      </div>
      <h5>変更する際には現在のパスワードを入力してください</h5>
   </div>
 </div>
<% end %>
