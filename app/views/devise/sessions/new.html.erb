<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10">

    <h1 class = "main-title">circle</h1>

    <%= alert %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <p class = "devise-mail"><%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "パスワード" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="check_box">
          <p><%= f.check_box :remember_me %>
          <%= f.label :内容を記憶させる %></p>
        </div>
      <% end %>

      <div class="actions">
        <p><%= f.submit "ログイン", class: "btn btn-primary btn-block" %></p>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
