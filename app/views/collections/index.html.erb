<div class="container">
  <div class="wrapper col-md-4 col-md-offset-4 col-sm-10 col-ex-6">

    <p class ="new event"><%= link_to "新規作成",new_collection_path, class: "glyphicon glyphicon-pencil" %></p>
    <p id="notice"><%= notice %></p>

    <% @collections.each do |collection| %>
      <p><%= collection.user.name %></p>
      <p><%= collection.title %></p>
      <p><%= collection.content %></p>
      <p><%= collection.place %></p>
      <p><%= collection.date %></p>
      <p><%= collection.starttime %></p>
      <p><%= collection.endtime %></p>
      <p><%= link_to '詳細', collection %></p>
      <% if current_user.id == collection.user.id %>
        <p><%= link_to " ", edit_collection_path(collection),class:'glyphicon glyphicon-wrench'%></p>
        <p><%= link_to " ", collection, method: :delete, data: { confirm: 'Are you sure?' },class: 'glyphicon glyphicon-trash' %></p>
      <% end %>
    <% end %>
  </div>
</div>
