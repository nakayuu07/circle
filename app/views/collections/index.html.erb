<div class="container">
  <li class = "search_form"><%= form_tag collections_path, class: 'search', :method => 'get' do %>
    <%= text_field_tag :search, params[:search], placeholder: "イベント名" %>
    <%= submit_tag "検索", :title => nil %></li>
  <% end %>
  <p id="notice"><%= notice %></p>
    <% @collections.each do |collection| %>
      <% unless collection.timeover? %>
      <%= link_to collection_path(collection) do %>
      <div class="event-child col-md-6 col-sm-12 col-xs-12">
        <p><%= truncate(collection.title, length:12) %></p>
        <p>場所:<%= collection.place %></p>
        <p>日付:<%= collection.date %></p>
        <p>開始時間:<%= collection.starttime%></p>
        <p class = "event-picture"><%= event_img(collection) %></p>
      <% end %>
      </div>
    <% end %>
  <% end %>
  <div class = "row">
    <div class = "col-md-12 col-sm-12 col-xs-12 center">
      <%= paginate @collections %>
    </div>
  </div>
</div>
