<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-6 col-ex-4">

    <p id="notice"><%= notice %></p>
    <div id = "join_area">
      <%= render partial: 'joins/join', locals: { join: @join, collection: @collection } %>
    </div>

    <div class = "joiner">
        <%= render partial: 'joins/index', locals: { collection: @collection } %>
    </div>

    <div class = "collection-info">
      <p><strong>タイトル</strong></p>
      <p class ="center" ><%= @collection.title %></p>
      <p><strong>内容</strong></p>
      <p><%= @collection.content %></p>
      <p><strong>場所：<%= @collection.place %></strong></p>
      <p><strong>定員：<%= @collection.capacity %>名</strong></p>
      <p><strong>日付：<%= @collection.date %></strong></p>
      <p><strong>開始時間：<%= @collection.starttime%></strong></p>
      <p class = "show-endtime"><strong>終了時間：<%= @collection.endtime%></strong></p>
      <div class = "show-user-info">
        <p class = "right"><strong>投稿者：<%= @collection.user.name %></strong></p>
        <p class = "event-picture right"><%= profile_img(@collection.user) %></strong></p>
      </div>
    </div>

    <% if current_user.id == @collection.user.id %>
      <p class = "show-icon"><%= link_to " ", edit_collection_path(@collection),class:'glyphicon glyphicon-wrench'%>
      <%= link_to " ", @collection, method: :delete, data: { confirm: '本当に削除してもいいですか?' },class: 'glyphicon glyphicon-trash' %></p>
    <% end %>

    <p class = "comments">コメント一覧</p>
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, collection: @collection } %>
    </div>
      <%= render partial: 'comments/form', locals: { comment: @comment, collection: @collection } %>
      <% if current_user.id == @collection.user_id %>
        <%= link_to '編集', edit_collection_path(@collection) %> |
      <% end %>
  </div>
</div>
