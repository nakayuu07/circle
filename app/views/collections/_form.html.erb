<%= form_for(@collection) do |f| %>
  <% if @collection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@collection.errors.count, "件のエラーがあります") %></h2>

      <ul>
      <% @collection.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_field :title, placeholder: "タイトル"%>
 <br>
  <%= f.text_area :content, placeholder: "内容" %>
 <br>
  <%= f.text_field :place, placeholder: "場所"%>
 <br>
  <%= f.date_field :date%>
 <br>
  <%= f.time_field :starttime%>
 <br>
  <%= f.time_field :endtime%>


  <div class="actions">
    <%= f.submit '投稿' %>
  </div>
<% end %>
